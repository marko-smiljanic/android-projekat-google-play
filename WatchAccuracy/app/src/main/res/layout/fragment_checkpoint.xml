<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLytCheckpoint2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="299dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="390dp"
            android:layout_height="76dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text='Dodirnite dugme "check" kada sekundna kazaljka na vasem satu dodje tacno na 12. Zatim cete uneti minute i sate sa vaseg sata. Minimum 6 sati razmaka izmedju sledeceg check-a, da bi rezultat bio validan'
            android:textColor="#B84C4C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="409dp"
            android:layout_height="125dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/secondhandslika" />

        <Button
            android:id="@+id/dugmeKreirajCheck"
            android:layout_width="153dp"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:text="Check!"
            app:backgroundTint="#EDDB3C"
            app:cornerRadius="999dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainLytCheckpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>